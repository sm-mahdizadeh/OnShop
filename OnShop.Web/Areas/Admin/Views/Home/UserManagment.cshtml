@using System.Security.Claims
@if (User.HasClaim(ClaimTypes.Role, "Admin"))
{
    <ribbon title="مدیریت کاربران" type="dark">
        <div class="row">
            <div class="col-xl-2 col-6">
                <a asp-action="Index" asp-controller="roles" class="box overflow-hidden pull-up hov-rs">
                    <div class="box-body">
                        <div class="icon bg-primary-light rounded w-60 h-60">
                            <i class="text-primary mr-0 font-size-24 mdi mdi-account-multiple"></i>
                        </div>
                        <div>
                            <p class="text-mute mt-20 mb-0 font-size-16">دسترسی</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-xl-2 col-6">
                <a asp-action="Index" asp-controller="user" class="box overflow-hidden pull-up hov-rs">
                    <div class="box-body">
                        <div class="icon bg-primary-light rounded w-60 h-60">
                            <i class="text-primary mr-0 font-size-24 mdi mdi-account-multiple"></i>
                        </div>
                        <div>
                            <p class="text-mute mt-20 mb-0 font-size-16">کاربران</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </ribbon>
}
