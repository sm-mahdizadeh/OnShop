@inject IResourceManager _resourceManager
@using OnShop.Domain.Enum
@model OnShop.Domain.Product.Dtos.Categories.CreateCategoryDto

<div class="row">
    <div class="col-12">
        <div class="box">
            <div class="box-header">
                <h4 class="box-title">@_resourceManager[SharedResource.Category]</h4>
            </div>
            <div class="box-body">
                <form enctype="multipart/form-data" asp-action="Create" asp-controller="Category" asp-area="Admin" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="Title" class="control-label"></label>
                            <div class="input-group">
                                <input type="text" asp-for="Title" class="form-control" />
                            </div>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ParentId" class="control-label"></label>
                            <div class="input-group">
                                <drop-down-list-font-awesome a></drop-down-list-font-awesome>
                                <select asp-for="ParentId" class="form-control select2" asp-items="@Model.Parents">
                                </select>
                            </div>
                            <span asp-validation-for="ParentId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label asp-for="Icon" class="control-label"></label>
                            <div class="input-group">
                                <drop-down-list-font-awesome asp-for="Icon"></drop-down-list-font-awesome>
                            </div>
                            <span asp-validation-for="Icon" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="box-footer text-right">
                        <button class="btn btn-success mr-1 mb-5 pull-right" type="submit">
                            <span class="fa fa-check-circle"></span>
                            @_resourceManager[SharedResource.Save]
                        </button>
                        <a asp-action="Index" class="btn btn-danger mb-5  pull-right">
                            <span class="fa fa-fw fa-undo"></span>
                            @_resourceManager[SharedResource.Cancel]
                        </a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


@section style
{
    @*<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css" rel="stylesheet" />*@

    <style>
        select {
            font-family: 'FontAwesome', 'sans-serif';
        }
    </style>

}
