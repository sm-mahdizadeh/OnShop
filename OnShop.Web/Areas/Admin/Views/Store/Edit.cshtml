@model StoreViewModel
@inject IResourceManager _resourceManager
@using OnShop.Domain.Enum;

<div class="box">
    <div class="box-body">
        <form asp-action="Edit" asp-controller="Store" asp-area="Admin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-md-6">
                    <label asp-for="Title" class="control-label"></label>
                    <div class="input-group">
                        <input type="text" asp-for="Title" class="form-control" />
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-secondary">
                        فروشگاه شما در سایت با این عنوان شناخته می شود.
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <label asp-for="Code" class="control-label"></label>
                    <div class="input-group">
                        <input type="text" asp-for="Code" class="form-control" />
                    </div>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-secondary">
                        کد فروشگاه شما شناسه فروشگاه شما میباشد که ادرس فروشگاه شما را مشخص میکند.<br />
                        @if (!string.IsNullOrWhiteSpace(Model.Code))
                        {
                            <p dir="ltr">
                                <a href="https://@(Model.Code).ShoshBazar.ir" target="_blank">@(Model.Code).ShoshBazar.ir</a> <br />   <a href="/Store/@(Model.Code)" target="_blank">ShoshBazar.ir/Store/@(Model.Code)</a>
                            </p>
                        }
                        else
                        {
                            <p dir="ltr">
                                {Code}.ShoshBazar.ir <br />
                                ShoshBazar.ir/Store/{Code}
                            </p>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <div class="input-group">
                        <input type="text" asp-for="PhoneNumber" class="form-control" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-secondary">
                        شماره تلفن شما که در پایین صفحه سایت شما نمایش داده میشود
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <label asp-for="Description" class="control-label"></label>
                    <div class="input-group">
                        <textarea type="text" asp-for="Description" class="form-control"></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-secondary">
                        توضیحات مختصری از حوزه فعالیت شما که برای اظلاع بیشتر کاربران در پایین صفحه سایت شما نمایش داده میشود
                    </div>
                </div>
            </div>   
            <div class="form-group row">
                <div class="col-md-6">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" asp-for="Agree" checked>
                        <label class="custom-control-label" asp-for="Agree"></label>
                    </div>
                    <span asp-validation-for="Agree" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-secondary">
                        برای ثبت فروشگاه خود در ابتدا شرایط و قوانین ثبت فروشگاه را در لینک زیر مطالعه بفرمائید
                       <br/>
                            <a asp-action="Terms" asp-controller="Stores" asp-area="" target="_blank">قوانین و مقررات ثبت فروشگاه</a>
                    </div>
                </div>
            </div>
            <div class="box-footer text-right">
                <button class="btn btn-success mr-1 mb-5 pull-right" type="submit">
                    <span class="fa fa-check-circle"></span>
                    @_resourceManager[SharedResource.Save]
                </button>
                <a asp-action="Index" class="btn btn-danger mb-5  pull-right">
                    <span class="fa fa-fw fa-undo"></span>
                    @_resourceManager[SharedResource.Cancel]
                </a>
            </div>
        </form>
    </div>
</div>