@model OnShop.Domain.Product.Dtos.Brands.CreateBrandDto
@inject IResourceManager _resourceManager

<div class="row">
    <div class="col-12">
        <div class="box">
            <div class="box-header">
                <h4 class="box-title">@_resourceManager[SharedResource.Role]</h4>
            </div>
            <div class="box-body">
                <form enctype="multipart/form-data" asp-action="Create" asp-controller="Brand" asp-area="Admin" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="Title" class="control-label"></label>
                            <div class="input-group">
                                <input type="text" asp-for="Title" class="form-control" />
                            </div>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EnglishTitle" class="control-label"></label>
                            <div class="input-group">
                                <input type="text" asp-for="EnglishTitle" class="form-control" />
                            </div>
                            <span asp-validation-for="EnglishTitle" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" rows="5" cols="5" placeholder="@_resourceManager[SharedResource.Description]" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="File" class="control-label"></label>
                                <input type="file" asp-for="File" />
                                <span asp-validation-for="File" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    @*<div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <input asp-page-handler="Upload" class="btn" type="submit" value="Upload" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>*@
                    <div class="box-footer text-right">
                        <button class="btn btn-success mr-1 mb-5 pull-right" type="submit">
                            <span class="fa fa-check-circle"></span>
                            @_resourceManager[SharedResource.Save]
                        </button>
                        <a asp-action="Index" class="btn btn-danger mb-5  pull-right">
                            <span class="fa fa-fw fa-undo"></span>
                            @_resourceManager[SharedResource.Cancel]
                        </a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>



