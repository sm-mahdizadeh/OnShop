            <li>
                <a asp-action="Index" asp-controller="Home">
                    <i data-feather="pie-chart"></i>
                    <span class="mnu_adminhomeindex">داشبورد</span>
                </a>
            </li>

            <li class="treeview mnu_admin">
                <a href="#">
                    <i data-feather="grid"></i>
