@using System.Security.Claims
@using OnShop.Web.Common
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico">
    <title>پنل مدیریت فروشگاه | @ViewBag.PageTitle</title>
    <partial name="_styles" />

    @await RenderSectionAsync("style", false)

</head>
<body class="hold-transition light-skin sidebar-mini theme-primary fixed rtl">
<input type="hidden" id="isAdmin" value="@(User.HasClaim(ClaimTypes.Role, Const.Roles.Admin))" />
<div class="wrapper">

    @*header*@
    <partial name="_header"/>
    @*endHeader*@

    @*SideMenu*@
    <partial name="_sideMenu"/>
    @*SideMenu*@


    <div class="content-wrapper">
        <div class="container-full">
            <partial name="_ContentHeader"/>
            <section class="content">
                @RenderBody()
            </section>
        </div>
    </div>

    @*Footer*@
    <partial name="_footer"/>
    @*Footer*@

</div>


<partial name="_script"/>

@await RenderSectionAsync("Scripts", false)
</body>
</html>
